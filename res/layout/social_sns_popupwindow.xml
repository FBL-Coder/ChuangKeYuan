<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_220"
    android:layout_height="@dimen/dp_55"
    android:gravity="center_vertical"
    android:background="@drawable/demo_social_sns_bg"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/digBtn"
		android:drawableLeft="@drawable/zan"
		android:paddingLeft="@dimen/dp_15"
		android:paddingRight="@dimen/dp_15"
        android:layout_width="0dp"
		android:layout_height="match_parent"
    	android:layout_weight="1"
    	android:text="@string/praise"
		android:textSize="@dimen/sp_20"
    	android:gravity="center"
    	android:textColor="@color/color_d2d2d2"/>
    <View
        android:layout_width="@dimen/dp_1"
    	android:layout_height="match_parent"
    	android:layout_marginBottom="@dimen/dp_2"
        android:layout_marginTop="@dimen/dp_2"
        android:background="@color/colortext_normal"
        />
    <TextView
        android:id="@+id/commentBtn"
		android:drawableLeft="@drawable/zana"
		android:paddingLeft="@dimen/dp_15"
		android:paddingRight="@dimen/dp_15"
        android:layout_width="0dp"
    	android:layout_height="match_parent"
    	android:layout_weight="1"
    	android:text="@string/syntheticalmark4"
    	android:gravity="center"
		android:textSize="@dimen/sp_20"
    	android:textColor="@color/color_d2d2d2"/>
</LinearLayout>
