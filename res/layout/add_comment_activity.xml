<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title_teach" />

    <LinearLayout
        android:id="@+id/fen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10">

                <LinearLayout
                    android:id="@+id/comment_ll_1"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_5">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_0"
                        android:layout_weight="2"
                        android:padding="@dimen/dp_2"
                        android:src="@drawable/comment_6" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_0"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="强烈推荐"
                        android:textColor="@android:color/background_dark"
                        android:textSize="@dimen/sp_12" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/comment_ll_2"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_5">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_0"
                        android:layout_weight="2"
                        android:src="@drawable/comment_8" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_0"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="@dimen/dp_2"
                        android:text="很满意"
                        android:textColor="@android:color/background_dark"
                        android:textSize="@dimen/sp_12" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/comment_ll_3"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_5">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_0"
                        android:layout_weight="2"
                        android:padding="@dimen/dp_2"
                        android:src="@drawable/comment_7" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_0"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="@dimen/dp_2"
                        android:text="满意"
                        android:textColor="@android:color/background_dark"
                        android:textSize="@dimen/sp_12" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/comment_ll_4"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_5">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_0"
                        android:layout_weight="2"
                        android:padding="@dimen/dp_2"
                        android:src="@drawable/comment_9" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_0"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="一般"
                        android:textColor="@android:color/background_dark"
                        android:textSize="@dimen/sp_12" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/comment_ll_5"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_5">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_0"
                        android:layout_weight="2"
                        android:padding="@dimen/dp_2"
                        android:src="@drawable/comment_10" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_0"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="差"
                        android:textColor="@android:color/background_dark"
                        android:textSize="@dimen/sp_12" />
                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/xing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_20"
                        android:text="综合评分 :"
                        android:textSize="@dimen/sp_20" />

                    <RatingBar
                        android:id="@+id/ratingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:numStars="5"
                        android:paddingTop="@dimen/dp_20"
                        android:progressDrawable="@drawable/ratingbar"
                        android:stepSize="1" />


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <com.example.abc.myricheditor.RichEditor
        android:id="@+id/editor"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@android:color/black">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/action_bold"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:src="@drawable/bold" />

            <ImageView
                android:id="@+id/action_italic"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:src="@drawable/italic" />

            <ImageView
                android:id="@+id/action_strikethrough"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:src="@drawable/strikethrough" />

            <ImageView
                android:id="@+id/action_underline"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:src="@drawable/underline" />

            <ImageView
                android:id="@+id/action_heading1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:src="@drawable/ic_font_size_increasej" />

            <ImageView
                android:id="@+id/action_heading2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:src="@drawable/ic_font_size_increase" />

            <ImageView
                android:id="@+id/action_indent"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:src="@drawable/indent" />

            <ImageView
                android:id="@+id/action_outdent"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:src="@drawable/outdent" />

            <ImageView
                android:id="@+id/action_align_left"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:src="@drawable/justify_left" />

            <ImageView
                android:id="@+id/action_align_center"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:src="@drawable/justify_center" />

            <ImageView
                android:id="@+id/action_align_right"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:src="@drawable/justify_right" />

            <ImageView
                android:id="@+id/action_insert_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:src="@drawable/insert_image" />


            <ImageView
                android:id="@+id/phone_camera"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="4dp"
                android:src="@drawable/wenzhang_camera" />

            <ImageView
                android:id="@+id/img_audio"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="@dimen/dp_4"
                android:src="@drawable/audio_btn" />


            <ImageView
                android:id="@+id/img_video"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="@dimen/dp_4"
                android:src="@drawable/video_btn" />

            <ImageView
                android:id="@+id/img_file"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="@dimen/dp_4"
                android:src="@drawable/file_btn" />

            <TextView
                android:id="@+id/action_txt_color"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="A"
                android:textColor="#fff"
                android:textSize="@dimen/sp_24"
                android:textStyle="bold|italic" />

        </LinearLayout>
    </HorizontalScrollView>




</LinearLayout>
