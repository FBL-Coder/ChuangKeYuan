<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.yitong.ChuangKeYuan.widget.SuperSwipeRefreshLayout
        android:id="@+id/SwipeRefreshLayout_xiu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ScrollView
            android:id="@+id/scrollview_xiu"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <com.yitong.ChuangKeYuan.widget.MyListView
                    android:id="@+id/lv_xiu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none" />
            </LinearLayout>
        </ScrollView>
    </com.yitong.ChuangKeYuan.widget.SuperSwipeRefreshLayout>

    <LinearLayout
        android:id="@+id/ku_xiu_yichang"
        style="@style/AbnormalLinearLayoutStyle"
        >

        <ImageView
            style="@style/CryImageViewStyle" />

        <TextView
           style="@style/AbnormalStyle"
            android:text="@string/abnormal1" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ku_xiu_denglu"
        style="@style/AbnormalLinearLayoutStyle"
        >

        <ImageView
           style="@style/CryImageViewStyle" />

        <TextView
            style="@style/AbnormalStyle"
            android:text="@string/abnormal2" />
    </LinearLayout>
</RelativeLayout>
