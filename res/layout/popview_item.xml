<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/color_aa000000">

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/color_aa000000">

        <RadioGroup
            android:layout_width="@dimen/dp_90"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                style="@style/GrayViewStyle" />

            <RadioButton
                style="@style/PopViewStyle"
                android:id="@+id/rb1"
                android:text="@string/radiobutton_recommend2"
                />

            <View
                style="@style/GrayViewStyle"  />

            <RadioButton
                style="@style/PopViewStyle"
                android:id="@+id/rb2"
                android:text="@string/radiobutton_bulid"
                />

            <View
                style="@style/GrayViewStyle" />

            <RadioButton
                style="@style/PopViewStyle"
                android:id="@+id/rb3"
                android:text="@string/radiobutton_tutor" />

            <View
                style="@style/GrayViewStyle" />

            <RadioButton
                style="@style/PopViewStyle"
                android:id="@+id/rb4"
                android:text="@string/radiobutton_space"
                />

            <View
                style="@style/GrayViewStyle" />

            <RadioButton
                style="@style/PopViewStyle"
                android:id="@+id/rb5"
                android:text="@string/radiobutton_school"
                />

            <View
                style="@style/GrayViewStyle"  />

            <RadioButton
                style="@style/PopViewStyle"
                android:id="@+id/rb6"
                android:text="@string/radiobutton_show2"
                />

            <View
                style="@style/GrayViewStyle"  />
            <RadioButton
                style="@style/PopViewStyle"
                android:id="@+id/rb7"
                android:text="@string/radiobutton_research"
                />

            <View
                style="@style/GrayViewStyle"  />
            <RadioButton
                style="@style/PopViewStyle"
                android:id="@+id/rb8"
                android:text="@string/close"
                />

            <View
                style="@style/GrayViewStyle" />
        </RadioGroup>
    </LinearLayout>
</LinearLayout>