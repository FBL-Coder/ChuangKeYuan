<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_48"
    android:background="@color/bai">

    <TextView
        android:id="@+id/tv_titlebar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/dp_10"
        android:text="@string/radiobutton_home"
        android:textColor="@color/black_title"
        android:textSize="@dimen/sp_20" />

    <ImageView
        android:id="@+id/iv_titlebar_back"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_48"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:padding="@dimen/dp_4"
        android:src="@drawable/back"
        android:background="@drawable/ease_common_tab_bg"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_titlebar_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:text="@string/radiobutton_find"
        android:textColor="@color/black_title"
        android:textSize="@dimen/sp_22"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/tv_titlebar_search"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_centerInParent="true"
        android:layout_alignParentRight="true">

        <ImageView
            android:id="@+id/iv_titlebar_right"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_48"
            android:padding="@dimen/dp_10"
            android:layout_centerInParent="true"
            android:background="@drawable/ease_common_tab_bg"
            android:src="@drawable/sousuo" />
        <ImageView
            android:id="@+id/iv_titlebar_up"
            android:layout_width="@dimen/dp_50"
            android:padding="@dimen/dp_10"
            android:layout_height="@dimen/dp_48"
            android:layout_centerInParent="true"
            android:src="@drawable/fengxiang"
            android:background="@drawable/ease_common_tab_bg"
            android:visibility="gone"
            />
    </RelativeLayout>

</RelativeLayout>
