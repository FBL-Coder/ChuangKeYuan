<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <include layout="@layout/title_teach"/>

    <RelativeLayout
        android:id="@+id/rela_name"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/textView28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="标题 :"
            android:textColor="#000000"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/textView28"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入标题"
            android:textColor="#000000"
            android:textSize="15sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="#cccccc" />
    </RelativeLayout>
    <com.example.abc.myricheditor.RichEditor
        android:id="@+id/editor"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@android:color/black"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/action_bold"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:src="@drawable/bold"
                />

            <ImageView
                android:id="@+id/action_italic"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:src="@drawable/italic"
                />

            <ImageView
                android:id="@+id/action_strikethrough"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:src="@drawable/strikethrough"
                />

            <ImageView
                android:id="@+id/action_underline"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:src="@drawable/underline"
                />

            <ImageView
                android:id="@+id/action_heading1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:src="@drawable/ic_font_size_increasej"
                />

            <ImageView
                android:id="@+id/action_heading2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:src="@drawable/ic_font_size_increase"
                />

            <TextView
                android:id="@+id/action_txt_color"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="A"
                android:textColor="#fff"
                android:gravity="center"
                android:textStyle="bold|italic"
                android:textSize="@dimen/sp_24"
                />

            <ImageView
                android:id="@+id/action_indent"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:src="@drawable/indent"
                />

            <ImageView
                android:id="@+id/action_outdent"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:src="@drawable/outdent"
                />

            <ImageView
                android:id="@+id/action_align_left"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:src="@drawable/justify_left"
                />

            <ImageView
                android:id="@+id/action_align_center"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:src="@drawable/justify_center"
                />

            <ImageView
                android:id="@+id/action_align_right"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:src="@drawable/justify_right"
                />


            <ImageView
                android:id="@+id/action_insert_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:src="@drawable/insert_image"
                />

            <ImageView
                android:id="@+id/phone_camera"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="4dp"
                android:src="@drawable/wenzhang_camera"
                />


            <ImageView
                android:id="@+id/img_audio"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="@dimen/dp_4"
                android:src="@drawable/audio_btn" />

            <ImageView
                android:id="@+id/img_video"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="@dimen/dp_4"
                android:src="@drawable/video_btn" />

            <ImageView
                android:id="@+id/img_file"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="@dimen/dp_4"
                android:src="@drawable/file_btn"
                />

        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>
