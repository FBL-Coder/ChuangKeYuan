<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_eeeeee"
    android:orientation="vertical">

    <include layout="@layout/title_teach"/>
    <RelativeLayout
        android:id="@+id/ku_research"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <LinearLayout
            style="@style/AbnormalLinearLayoutStyle"
            android:visibility="visible"
            >

            <ImageView
                style="@style/CryImageViewStyle"/>

            <TextView
                android:id="@+id/ku_tv"
                style="@style/AbnormalStyle"
                android:text="@string/abnormal4" />

        </LinearLayout>
    </RelativeLayout>

    <com.tencent.smtt.sdk.WebView
        android:id="@+id/webView_research"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">
    </com.tencent.smtt.sdk.WebView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/ll_research_data"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lly_test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <Button
                    android:id="@+id/submit"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_60"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/dp_30"
                    android:layout_marginTop="@dimen/dp_50"
                    android:background="@drawable/em_btn_style_alert_dialog_special"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:gravity="center"
                    android:text="提    交"
                    android:textColor="@color/bai"
                    android:textSize="@dimen/sp_32"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
