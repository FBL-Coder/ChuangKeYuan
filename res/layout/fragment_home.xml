<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/iv_cky"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:layout_marginBottom="@dimen/dp_1"
            android:layout_weight="2"
            android:src="@drawable/cky"
            />
    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="@dimen/dp_0"
        android:layout_weight="8"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:fadingEdge="none"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >


            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/btn_recommend"
                    style="@style/TabRadioButtonStyle"
                    android:text="@string/radiobutton_recommend" />

                <RadioButton
                    android:id="@+id/btn_build"
                    style="@style/TabRadioButtonStyle"
                    android:text="@string/radiobutton_bulid" />

                <RadioButton
                    android:id="@+id/btn_tutor"
                    style="@style/TabRadioButtonStyle"
                    android:text="@string/radiobutton_tutor" />

                <RadioButton
                    android:id="@+id/btn_space"
                    style="@style/TabRadioButtonStyle"
                    android:text="@string/radiobutton_space" />

                <RadioButton
                    android:id="@+id/btn_school"
                    style="@style/TabRadioButtonStyle"
                    android:text="@string/radiobutton_school" />

                <RadioButton
                    android:id="@+id/btn_show"
                    style="@style/TabRadioButtonStyle"
                    android:text="@string/radiobutton_show" />

                <RadioButton
                    android:id="@+id/btn_research"
                    style="@style/TabRadioButtonStyle"
                    android:text="@string/radiobutton_research" />
            </RadioGroup>

            <ImageView
                android:id="@+id/img"
                android:layout_width="@dimen/rdo2"
                android:layout_height="@dimen/dp_3"
                android:layout_alignParentBottom="true"
                android:background="@color/color_3498db" />
        </RelativeLayout>
    </HorizontalScrollView>
        <ImageView
            android:id="@+id/iv_home"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:src="@drawable/gd"
            android:layout_marginBottom="@dimen/dp_1"
            android:background="@drawable/selector_pop_bg"
            android:layout_weight="1"
            />
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_search"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@drawable/search"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_homefragment_viewpager"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="8" />

</LinearLayout>
