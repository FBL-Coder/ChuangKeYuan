<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/selector_dialog_btn"
        android:padding="@dimen/dp_10">

        <ImageView
            android:id="@+id/task_iv_down"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5" />

        <TextView
            android:id="@+id/task_tv_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/task_iv_down"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/task_down_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_20"
            android:translationY="@dimen/dp_8" />

        <TextView
            android:id="@+id/task_down_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:id="@+id/task_down_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <ProgressBar
            android:id="@+id/progress_down"
            style="@style/ProgressBar_Mini"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_8"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_toRightOf="@id/task_iv_down"
            android:translationY="@dimen/dp_20"
            android:visibility="gone" />
    </RelativeLayout>
    <View
        style="@style/GrayViewStyle"/>
</LinearLayout>
