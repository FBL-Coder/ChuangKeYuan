<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title_teach" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/ll_nodata_teacherdetail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/iv_firstteacher"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_300"
                fresco:actualImageScaleType="centerCrop" />

            <RelativeLayout
                style="@style/MyRelativeLayoutStyle"
                android:layout_marginTop="@dimen/dp_1_5">

                <TextView
                    android:id="@+id/tv_teacher_name"
                    style="@style/TVStyle" />

                <TextView
                    android:id="@+id/tv_teacher_name1"
                    style="@style/TVStyle"
                    android:layout_toRightOf="@id/tv_teacher_name" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/color_8e8e93" />

            <RelativeLayout
                style="@style/MyRelativeLayoutStyle"
                android:layout_marginTop="@dimen/dp_1_5">

                <TextView
                    android:id="@+id/tv_teacher_zhicheng"
                    style="@style/TVStyle" />

                <TextView
                    android:id="@+id/tv_teacher_zhicheng1"
                    style="@style/TVStyle"
                    android:layout_toRightOf="@id/tv_teacher_zhicheng" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/color_8e8e93" />

            <RelativeLayout
                style="@style/MyRelativeLayoutStyle"
                android:layout_marginTop="@dimen/dp_1_5">

                <TextView
                    android:id="@+id/tv_teacher_politics"
                    style="@style/TVStyle" />

                <TextView
                    android:id="@+id/tv_teacher_politics1"
                    style="@style/TVStyle"
                    android:layout_toRightOf="@id/tv_teacher_politics" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/color_8e8e93" />

            <RelativeLayout
                style="@style/MyRelativeLayoutStyle"
                android:layout_marginTop="@dimen/dp_1_5">

                <TextView
                    android:id="@+id/tv_teacher_year"
                    style="@style/TVStyle" />

                <TextView
                    android:id="@+id/tv_teacher_year1"
                    style="@style/TVStyle"
                    android:layout_toRightOf="@id/tv_teacher_year" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/color_8e8e93" />

            <RelativeLayout
                style="@style/MyRelativeLayoutStyle"
                android:layout_marginTop="@dimen/dp_1_5">

                <TextView
                    android:id="@+id/tv_teacher_geyan"
                    style="@style/TVStyle" />

                <TextView
                    android:id="@+id/tv_teacher_geyan1"
                    style="@style/TVStyle"
                    android:layout_toRightOf="@id/tv_teacher_geyan" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/color_8e8e93" />

            <RelativeLayout
                style="@style/MyRelativeLayoutStyle"
                android:layout_marginTop="@dimen/dp_1_5">

                <TextView
                    android:id="@+id/tv_teacher_describe"
                    style="@style/TVStyle" />

                <TextView
                    android:id="@+id/tv_teacher_describe1"
                    style="@style/TVStyle"
                    android:layout_toRightOf="@id/tv_teacher_describe" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/rl_nodata_teacherdetail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <LinearLayout
            style="@style/AbnormalLinearLayoutStyle"
            android:visibility="visible">

            <ImageView style="@style/CryImageViewStyle" />

            <TextView
                style="@style/AbnormalStyle"
                android:text="@string/abnormal2" />

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
