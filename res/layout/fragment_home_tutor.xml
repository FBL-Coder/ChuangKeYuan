<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.facebook.drawee.view.SimpleDraweeView
        style="@style/CommonImageViewStyle"
        android:id="@+id/iv_tutor"
        android:scaleType="centerCrop"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            style="@style/TutorRelativeLayoutStyle"
            android:id="@+id/rl_tutor_teacher"
            >

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/iv_tutor1"
                style="@style/BuildImageViewStyle"
                />

            <TextView
                android:id="@+id/tv_tutor1"
                style="@style/TutorTextViewStyle"
                 />
        </RelativeLayout>
        <View
           style="@style/GrayViewStyle"
            />

        <RelativeLayout
            style="@style/TutorRelativeLayoutStyle"
            android:id="@+id/rl_tutor_parent"
            >

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/iv_tutor2"
                style="@style/BuildImageViewStyle"
                 />

            <TextView
                android:id="@+id/tv_tutor2"
                style="@style/TutorTextViewStyle"
                 />
        </RelativeLayout>

        <View
            style="@style/GrayViewStyle"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
