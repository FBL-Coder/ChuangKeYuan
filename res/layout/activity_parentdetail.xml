<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:ignore="NamespaceTypo">

    <include layout="@layout/title_teach" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/ll_parentdetail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/iv_parent"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_300"
                fresco:actualImageScaleType="centerCrop"
                fresco:placeholderImageScaleType="centerInside" />

            <RelativeLayout
                style="@style/MyRelativeLayoutStyle"
                android:layout_marginTop="@dimen/dp_1_5">

                <TextView
                    android:id="@+id/tv_parent_name"
                    style="@style/TVStyle" />

                <TextView
                    android:id="@+id/tv_parent_name1"
                    style="@style/TVStyle"
                    android:layout_toRightOf="@id/tv_parent_name" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1_5"
                android:background="@color/color_8e8e93" />

            <RelativeLayout
                style="@style/MyRelativeLayoutStyle"
                android:layout_marginTop="@dimen/dp_1_5">

                <TextView
                    android:id="@+id/tv_parent_baby_name"
                    style="@style/TVStyle" />

                <TextView
                    android:id="@+id/tv_parent_baby_name1"
                    style="@style/TVStyle"
                    android:layout_toRightOf="@id/tv_parent_baby_name" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1_5"
                android:background="@color/color_8e8e93" />

            <RelativeLayout
                style="@style/MyRelativeLayoutStyle"
                android:layout_marginTop="@dimen/dp_1_5">

                <TextView
                    android:id="@+id/tv_parent_class"
                    style="@style/TVStyle" />

                <TextView
                    android:id="@+id/tv_parent_class1"
                    style="@style/TVStyle"
                    android:layout_toRightOf="@id/tv_parent_class" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1_5"
                android:background="@color/color_8e8e93" />

            <RelativeLayout
                style="@style/MyRelativeLayoutStyle"
                android:layout_marginTop="@dimen/dp_1_5">

                <TextView
                    android:id="@+id/tv_parent_age"
                    style="@style/TVStyle" />

                <TextView
                    android:id="@+id/tv_parent_age1"
                    style="@style/TVStyle"
                    android:layout_toRightOf="@id/tv_parent_age" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1_5"
                android:background="@color/color_8e8e93" />

            <RelativeLayout
                style="@style/MyRelativeLayoutStyle"
                android:layout_marginTop="@dimen/dp_1_5">

                <TextView
                    android:id="@+id/tv_parent_job"
                    style="@style/TVStyle" />

                <TextView
                    android:id="@+id/tv_parent_job1"
                    style="@style/TVStyle"
                    android:layout_toRightOf="@id/tv_parent_job" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1_5"
                android:background="@color/color_8e8e93" />

            <RelativeLayout
                style="@style/MyRelativeLayoutStyle"
                android:layout_marginTop="@dimen/dp_1_5">

                <TextView
                    android:id="@+id/tv_parent_geyan"
                    style="@style/TVStyle" />

                <TextView
                    android:id="@+id/tv_parent_geyan1"
                    style="@style/TVStyle"
                    android:layout_toRightOf="@id/tv_parent_geyan" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1_5"
                android:background="@color/color_8e8e93" />

            <RelativeLayout
                style="@style/MyRelativeLayoutStyle"
                android:layout_marginTop="@dimen/dp_1_5">

                <TextView
                    android:id="@+id/tv_parent_miaoshu"
                    style="@style/TVStyle"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_parent_miaoshu1"
                    style="@style/TVStyle"
                    android:layout_toRightOf="@id/tv_parent_miaoshu"
                    android:visibility="visible" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1_5"
                android:background="@color/color_8e8e93" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_5"
                android:textColor="@android:color/black"
                android:textSize="@dimen/sp_24"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_parentjieshao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:textSize="@dimen/sp_18" />

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/nodata_parentdetail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <LinearLayout
            style="@style/AbnormalLinearLayoutStyle"
            android:visibility="visible">

            <ImageView style="@style/CryImageViewStyle" />

            <TextView
                style="@style/AbnormalStyle"
                android:text="@string/abnormal4" />

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
